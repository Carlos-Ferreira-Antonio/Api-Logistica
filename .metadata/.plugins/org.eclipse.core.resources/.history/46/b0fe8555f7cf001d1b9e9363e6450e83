package com.entregamercadoria.log.domain.model;

import javax.persistence.Column;
import javax.persistence.Embeddable;
import javax.validation.constraints.NotBlank;

import lombok.Getter;
import lombok.Setter;

@Getter
@Setter
@Embeddable //Pode ser Imbedada, neste caso está sendo na classe entrega
public class Destinatario {
	//Farei anotação em cada atributo
	//Para settar o atributo ao campo da tabela(coluna da tabela)
	@NotBlank //Não pode ser vazio
	@Column(name = "destinatario_nome")
	private String nome;
	
	@NotBlank 
	@Column(name = "destinatario_logradouro")
	private String logradouro;
	
	@NotBlank 
	@Column(name = "destinatario_numero")
	private String numero;
	
	@NotBlank 
	@Column(name = "destinatario_complemento")
	private String complemento;
	
	@NotBlank 
	@Column(name = "destinatario_bairro")
	private String bairro;


}
