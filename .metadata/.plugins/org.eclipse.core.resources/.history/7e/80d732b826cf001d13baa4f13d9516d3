package com.entregamercadoria.log.api.assembler;

import java.util.List;
import java.util.stream.Collectors;

import org.modelmapper.ModelMapper;
import org.springframework.stereotype.Component;

import com.entregamercadoria.log.api.model.EntregaModel;
import com.entregamercadoria.log.domain.model.Entrega;

import lombok.AllArgsConstructor;

@AllArgsConstructor
@Component
public class EntregaAssembler {

	private ModelMapper modelMapper;
	//Metodo para transformar Entrega em  EntregaModel 
	public EntregaModel toModel(Entrega entrega) {
		return modelMapper.map(entrega, EntregaModel.class);
	}
	
	//Convertendo Lista de EntregaModel para Lista de Entrega
	public List<EntregaModel> toCollectionModel(List<Entrega> entregas){
		//Primeiro pegando stream
		return entregas.stream()
				//aplicar função aos elementos stream 
				//E retornar stream com resultados
				//Convertendo stream de entregas em stream de entregamodel
				.map(this::toModel)
				//Mas precisamos de Lista, entâo convertemos stream em lista:
				//Reduzir stream em collect
				.collect(Collectors.toList());		
	}
	
	//Metodo que converte uma EntregaInput em Entrega
	public Entrega toEntity(EntregaInput entregaInput) {
		return modelMapper.map(entregaInput, Entrega.class);
	}
}
